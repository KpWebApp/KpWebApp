@model KPWebApp.WebUI.Models.UserBiographyViewModel

@{
    ViewBag.Title = Model.FullName;
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>Про себе</strong>
            </h2>
            <hr>
        </div>
        @Model.Bio
        <div class="clearfix"></div>
    </div>
</div>

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Мої світлини
            </h2>
            <hr>
        </div>
        @foreach (var photo in Model.Photos)
        {
            <div class="col-sm-4 text-center">
                <img class="img-responsive" src="@Url.Action("GetImage", "Personal", new { imageId = photo.PhotoId, username = Model.Username })" alt="">
                <h3>@photo.PhotoHeader</h3>
            </div>
        }

        <div class="clearfix"></div>
    </div>
</div>

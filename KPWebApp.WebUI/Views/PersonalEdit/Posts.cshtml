@model IEnumerable<KPWebApp.Domain.Entities.Post>

@{
    ViewBag.Title = "Дописи";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">всі дописи
            </h2>
            <hr>
        </div>
        <div class="col-lg-12">
            <p>@Html.ActionLink("Створити новий допис", "CreatePost")</p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID допису</th>
                        <th>Заголовок</th>
                        <th>Час створення</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PostId</td>
                            <td>@Html.ActionLink(item.Header, "Edit", new { PostId = item.PostId })</td>
                            <td>@item.Time.ToString()</td>
                            <td>
                                @using (Html.BeginForm("DeletePost", "PersonalEdit"))
                                {
                                    @Html.Hidden("PostId", item.PostId)
                                    <button type="submit" class="btn btn-primary">
                                        <i class="glyphicon glyphicon-remove"></i> Видалити
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>@Html.ActionLink("Створити новий допис", "CreatePost")</p>
        </div>
    </div>
</div>

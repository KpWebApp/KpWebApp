@model IEnumerable<KPWebApp.Domain.Entities.Photo>

@{
    ViewBag.Title = "Світлини";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>Всі світлини</strong>
            </h2>
            <hr>
        </div>
        <div class="col-lg-12">
            <p>@Html.ActionLink("Додати нову світлину", "AddNewPhoto")</p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Світлина</th>
                        <th>Заголовок</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="col-sm-4 text-center">
                                    <img class="img-responsive" src="@Url.Action("GetImage", "PersonalEdit", new { imageId = item.PhotoId })" alt="фото">
                                </div>
                            </td>
                            <td>
                                @Html.ActionLink(item.PhotoHeader, "HeaderEdit", new { item.PhotoId })
                            </td>
                            <td>
                                @using (Html.BeginForm("Delete", "PersonalEdit"))
                                {
                                    @Html.Hidden("PhotoId", item.PhotoId)
                                     <button type="submit" class="btn btn-primary">
                                        <i class="glyphicon glyphicon-remove"></i> Видалити
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>@Html.ActionLink("Додати нову світлину", "AddNewPhoto")</p>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

@using KPWebApp.BLL
@model KPWebApp.WebUI.Models.PersonalData

@{
    ViewBag.Title = "Редагувати особисті дані";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Особисті дані
            </h2>
            <hr>
            @using (Html.BeginForm("EditPersonalData", "PersonalEdit", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "Ім`я" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MiddleName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", @placeholder = "По батькові" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Прізвище" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Status, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Status, new { @class = "form-control", @placeholder = "Статус" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Biography, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.Biography, new { @class = "form-control", @placeholder = "Про себе" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Gender, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Gender, Enum.GetValues(Model.Gender.GetType())
                            .Cast<Enum>()
                            .Select(m =>
                            {
                                string enumVal = Enum.GetName(Model.Gender.GetType(), m);
                                return new SelectListItem
                                {
                                    Selected = (Model.Gender.ToString() == enumVal),
                                    Text = TextParser.TranslateCategoryToUkrainian(enumVal),
                                    Value = TextParser.TranslateCategoryToEnglish(enumVal)
                                };
                            }), new { @class = "form-control" })
                    </div>
                </div> 
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Зберегти</button>
                    </div>
                </div>
                <p>@Html.ActionLink("Відмінити і повернутися назад", "Index")</p>
            }
        </div>
    </div>
</div>

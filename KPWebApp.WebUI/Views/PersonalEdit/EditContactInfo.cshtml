@model KPWebApp.Domain.Entities.ContactInfo

@{
    ViewBag.Title = "Редагувати контакти";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Контакти
            </h2>
            <hr>
            @using (Html.BeginForm("EditContactInfo", "PersonalEdit", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Skype, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Skype, new { @class = "form-control", @placeholder = "Skype-ім'я" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Facebook, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Facebook, new { @class = "form-control", @placeholder = "Facebook" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MobNumber, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.MobNumber, new { @class = "form-control", @placeholder = "Мобільний телефон" })
                    </div>
                </div>
                 <div class="form-group">
                    @Html.LabelFor(m => m.HomeNumber, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.HomeNumber, new { @class = "form-control", @placeholder = "Домашній телефон" })
                    </div>
                </div>
                 <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Зберегти</button>
                    </div>
                </div>
                <p>@Html.ActionLink("Відмінити зміни і повернутися назад", "Index")</p>
            }
        </div>
    </div>
</div>

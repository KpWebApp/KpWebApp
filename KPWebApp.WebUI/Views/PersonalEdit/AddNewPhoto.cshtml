@model KPWebApp.Domain.Entities.Photo

@{
    ViewBag.Title = "Додати світлину";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Додати нову світлину
            </h2>
            <hr>

            @using (Html.BeginForm("AddNewPhoto", "PersonalEdit", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.PhotoHeader, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PhotoHeader, new { @class = "form-control", @placeholder = "Підпис до фото" })
                    </div>
                </div>
                <div class="editor-field">
                    @if (Model.ImageData == null)
                    {

                    }
                    else
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.ImageData, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                <img width=250 height=250 src="@Url.Action("GetImage", "PersonalEdit", new { Model.PhotoId })"/>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="editor-field">
                            <div>
                                <label for="image" class="col-sm-2 control-label">Завантажити нове зображення</label>
                                <input type="file" name="image" class="col-sm-10" />
                            </div>
                        </div>
                    </div>
                </div>                
                           
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Зберегти</button>
                    </div>
                </div>
                @Html.ActionLink("Відмінити зміни і повернутися до списку", "Photos")
            }
        </div>
    </div>
</div>

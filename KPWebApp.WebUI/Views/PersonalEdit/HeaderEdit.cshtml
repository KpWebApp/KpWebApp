@model KPWebApp.Domain.Entities.Photo

@{
    ViewBag.Title = "Світлина";
    Layout = "~/Views/Shared/_PersonalLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Редагувати підпис до світлини
            </h2>
            <hr>
            @using (Html.BeginForm("HeaderEdit", "PersonalEdit", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                <div class="form-group">
                   
                        @*@Html.TextBoxFor(m => m.PhotoId, new { @class = "form-control", @placeholder = "", @readonly = "true",  @hidden = "true"})*@
                        @Html.HiddenFor(x => x.PhotoId)
                    
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PhotoHeader, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PhotoHeader, new { @class = "form-control", @placeholder = "Підпис до фото" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ImageData, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                       <img class="img-responsive" src="@Url.Action("GetImage", "PersonalEdit", new { imageId = Model.PhotoId })" alt="фото">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Зберегти</button>
                    </div>
                </div>
                <p>@Html.ActionLink("Відмінити зміни і повернутися до списку", "Photos")</p>
    
            }
        </div>
    </div>
</div>

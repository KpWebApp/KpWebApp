@using KPWebApp.BLL
@model KPWebApp.Domain.Entities.Post
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                <strong>@Model.Header</strong>
            </h2>
            <hr />
            @if (Model.ImageData != null)
            {
                <img class ="img-responsive img-border img-left" width="350" height="350" src="@Url.Action("GetImage", "Post", new{ PostId = Model.PostId })"/>
            }

            @foreach (string chapter in TextParser.ParseString(Model.Text))
            {
                <p>@chapter</p>
            }
            <h4 class="text-right">@Model.Time.ToShortDateString()</h4>
        </div>
    </div>
</div>

@model KPWebApp.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Вхід";
    Layout = "~/Views/Shared/_LoginFormLayout.cshtml";
}

@*<h1>Login</h1>
<p>Message: @ViewBag.Message</p>
<p>Please log in to access the administrative area:</p>*@
@using (Html.BeginForm(new { @class = "form-horizontal" }))
{
    <form id="loginform" class="form-horizontal" role="form" method="post" action="">
        @Html.ValidationSummary(true)
        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input id="login-username" type="text" class="form-control" name="Username" value="" placeholder="Логін">
        </div>

        <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <input id="login-password" type="password" class="form-control" name="Password" placeholder="Пароль">
        </div>

        <div style="margin-top: 10px" class="form-group">
            <div>
                <input id="btn-login" type="submit" class="btn btn-success" value="Увійти" />
                @Html.ActionLink("На головну", "Index", "Home", null, new { @class = "btn btn-primary" })
            </div>            
            <br/>
        </div>
 
        <div class="form-group">
            <div>
                <div style="border-top: 1px solid#888; padding-top: 15px; font-size: 85%">
                    Немає сторінки? 
                    @Html.ActionLink(" Зареєструватися", "Register", "Account")
                </div>
            </div>
        </div>
    </form>
}
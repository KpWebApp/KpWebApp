@using KPWebApp.Domain.Entities
@model KPWebApp.WebUI.Models.TeacherInfoPage

@{
    ViewBag.Title = "Викладач кафедри";
    Layout = "~/Views/Shared/_PostsLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12 text-center">
            <hr>
            <h2 class="intro-text text-center">
                <strong>@Model.FullName</strong>
            </h2>
            <hr>
            <div>
                @if (Model.ProfilePhoto != null)
                {
                    <img class ="img-responsive img-border img-left" width="350" height="350" src="@Url.Action("GetTeachersProfileImage", "Post", new{ Model.UserId })"/>
                }
                 @if (!String.IsNullOrEmpty(@Model.Chair))
                {
                    <p>Науковий ступінь: </p> @Model.Chair
                }
                @if (!String.IsNullOrEmpty(@Model.Degree))
                {
                    <p>Науковий ступінь: </p> @Model.Degree
                }
                
                @if (@Model.WorksFrom != null)
                {
                    <p>Працює з: </p> @Model.WorksFrom.Value.ToShortDateString()
                }
                @if (@Model.WorkedTill != null)
                {
                    <p>Працює до: </p> @Model.WorkedTill.Value.ToShortDateString()
                }
                else
                {
                    <br>
                }
            </div>
            <div>
@if (Model.ProfilePhoto != null)
                {
<br>
}
                @if (Model.Courses.Any())
                {
                    <h3>Навчальні курси:</h3>
                    foreach (Course course in Model.Courses)
                     {
                         <p>@course.Name</p>
                     }
                }
            </div>
            
            </div>
    </div>
</div>
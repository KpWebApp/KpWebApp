@model IEnumerable<KPWebApp.Domain.Entities.User>

@{
    ViewBag.Title = "Admin: всі викладачі";
    Layout = "~/Views/Shared/_PostsLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">всі викладачі
            </h2>
            <hr>
        </div>
        <div class="col-lg-12">
            <p>@Html.ActionLink("Додати нового викладача", "AddTeacher")</p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Повне ім'я</th>
                        <th>Зареєстрований</th>
                        <th>Дії</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@Html.ActionLink(item.FullName, "EditTeacher", new { item.UserId })</td>
                            @if (item.IsRegistred)
                            {
                                <td>Так</td>
                            }
                            else
                            {
                                <td>Ні</td>
                            }

                            <td>
                                @using (Html.BeginForm("DeleteTeacher", "Admin"))
                                {
                                    @Html.Hidden("UserId", item.UserId)
                                    <button type="submit" class="btn btn-primary">
                                        <i class="glyphicon glyphicon-remove"></i> Видалити
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>@Html.ActionLink("Додати нового викладача", "AddTeacher")</p>
        </div>
    </div>
</div>

@model KPWebApp.WebUI.Models.ChangingPassword

@{
    ViewBag.Title = "Змінити пароль";
    Layout = "~/Views/Shared/_PostsLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Зміна пароля
            </h2>
            <hr>
            @using ((Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal changePassword" })))
            {
                <div style="margin-bottom: 25px" class="form-group">
                   <p class="text-center"><font color="red"> @ViewBag.Message</font></p>
                </div>
                
                <div style="margin-bottom: 25px" class="form-group">
                    <label for="OldPassword" class="col-md-3 control-label">Старий пароль</label>
                    <div class="col-md-9">
                        <input id="register-firstname" type="password" class="form-control col-md-9" name="OldPassword" value="" placeholder="Пароль">
                    </div>
                </div>
    
                <div style="margin-bottom: 25px" class="form-group">
                    <label for="NewPassword" class="col-md-3 control-label">Новий пароль</label>
                    <div class="col-md-9">
                        <input id="register-firstname" type="password" class="form-control col-md-9" name="NewPassword" value="" placeholder="Пароль">
                    </div>
                </div>
                <div style="margin-bottom: 25px" class="form-group">
                    <label for="secondNewPassword" class="col-md-3 control-label">Повторіть новий пароль</label>
                    <div class="col-md-9">
                        <input id="register-firstname" type="password" class="form-control col-md-9" name="secondNewPassword" value="" placeholder="Пароль">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Зберегти</button>
                    </div>
                </div>
                <p>@Html.ActionLink("Відмінити зміни і повернутися назад", "Index")</p>
            }
        </div>
    </div>
</div>

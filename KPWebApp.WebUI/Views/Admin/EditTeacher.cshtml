@model KPWebApp.WebUI.Models.TeacherByAdmin

@{
    ViewBag.Title = "Admin: викладач";
    Layout = "~/Views/Shared/_PostsLayout.cshtml";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Викладач
            </h2>
            <hr>

            @using (Html.BeginForm("EditTeacher", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.UserId, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", @readonly = "true" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.MiddleName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Chair, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Chair, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Degree, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Degree, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.WorksFrom, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.WorksFrom, new { @class = "form-control", @type = "date" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.WorkedTill, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.WorkedTill, new { @class = "form-control", @type = "date" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Courses, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.Courses, new { @class = "form-control", @placeholder = "Текст" })
                    </div>
                </div>
                <div class="editor-field">
                    @if (Model.ImageData == null)
                    {

                    }
                    else
                    {
                        <div class="form-group">
                            @Html.LabelFor(m => m.ImageData, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                <img width=250 height=250 src="@Url.Action("GetImageForTeacher", "Admin", new { Model.UserId })"/>
                            </div>
                        </div>
                    }
                    <div class="form-group">
                        <div class="editor-field">
                            <div>
                                <label for="image" class="col-sm-2 control-label">Завантажити нове зображення</label>
                                <input type="file" name="image" class="col-sm-10" />
                            </div>
                        </div>
                    </div>
                </div>                
                           
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">Зберегти</button>
                    </div>
                </div>
                @Html.ActionLink("Відмінити зміни і повернутися до списку", "ListOfTeachers")
            }
        </div>
    </div>
</div>
